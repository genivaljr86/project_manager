<%= form_for [@project, @task] do |f| %>
  <%= error_messages_for @task %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, size: 60 %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, rows: 6 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

